<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pk.nz.pinoyklasiks">

    //Get the permission for reading the phone number
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>


    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ProductsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Activity where we goint to search -->

            <meta-data android:name="android.app.default_searchable"
                android:value=".activities.SearchResultsActivity"/>

        </activity>

        <!-- Search Activity -->
        <activity android:name=".activities.SearchResultsActivity">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!-- Add this so that the app can find sea rchable resourse -->

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <!-- End of Search Activity -->



    </application>

</manifest>